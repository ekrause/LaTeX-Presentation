% USEFUL COMMANDS:

% Center Image Command
%	Arg1: Graphic to insert (\includegraphics[width=\textwidth]{path_to_file})
%	Arg2: Caption for Graphic
%   Arg3: Label for Graphic
\newcommand{\centerimage}[3]{
    \begin{figure}[ht!]  
        \begin{center}
            #1
            \caption{#2}
            \label{#3}
        \end{center}
    \end{figure}
}

% Side by Side Pictures Command: 
%	Arg1: Graphic1 insert (\includegraphics[width=\textwidth]{path_to_file_1})
%	Arg2: Caption for Graphic1
%   Arg3: Label for Graphic1 
%	Arg1: Graphic2 insert (\includegraphics[width=\textwidth]{path_to_file_2})
%	Arg2: Caption for Graphic2
%   Arg3: Label for Graphic2 
\newcommand{\picsidebyside}[6]{
    \begin{figure}[ht]            
        \begin{minipage}[b]{0.5\linewidth}
            \centering
            #1
            \caption{#2}
            \label{#3}
        \end{minipage}
        \hspace{0.5cm}
        \begin{minipage}[b]{0.5\linewidth}
            \centering
            #4 
            \caption{#5}
            \label{#6}
        \end{minipage}
    \end{figure}
}

